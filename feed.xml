---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xmlns:webfeeds="http://webfeeds.org/rss/1.0" xml:lang="{% if site.active_lang == blank %}{{site.default_lang}}">
     <description>{{ site.description[site.default_lang] | xml_escape }}</description>
    {% else %}{{site.active_lang}}">
     <description>{{ site.description[site.active_lang] | xml_escape}}</description>
    {% endif %}
    <webfeeds:icon>{{ 'img/diecknet.svg' | absolute_url }}</webfeeds:icon>
    <id>{{ 'feed.xml' | absolute_url }}</id>
    <updated>{{"now"| date: "%Y-%m-%dT%TZ"}}</updated>
    <title>{{ site.title | xml_escape }}</title>
    <link href="{{ '/index.html' | absolute_url }}" rel="alternate" type="text/html" />
    {% if site.active_lang == site.default_lang %}
      <link rel="alternate" hreflang="en" href="https://diecknet.de/en/feed.xml" />
    {% else %}
      <link rel="alternate" hreflang="de" href=" https://diecknet.de/feed.xml" />
    {% endif %}
    <link href="{{ 'feed.xml' | absolute_url }}" rel="self" type="application/rss+xml" />
    {% for post in site.posts limit:20 %}
      <entry>
        <title>{{ post.title | xml_escape }}</title>
        <id>{{ post.url | absolute_url }}</id>
        <author><name>{% if post.author %}{{ post.author }}{% else %}{{ site.author.name }}{% endif %}</name></author>
        <summary type="html">
          {% if post.subtitle %}{{ post.subtitle | xml_escape }} - {% endif %}
          {{ post.content | strip_html | xml_escape | truncatewords: 50 }}
        </summary>
        <content type="html">
          <![CDATA[{% if post.image %}<p><a href="{{ post.url | absolute_url }}"><img src="{{ post.image | absolute_url }}" class="webfeedsFeaturedVisual" alt="" /></a></p>{% endif %}<p>{% if post.subtitle %}{{ post.subtitle | xml_escape }} - {% endif %}
          {{ post.content | strip_html | xml_escape | truncatewords: 50 }}</p>]]>
        </content>
        <!--TODO <link rel="enclosure" type="image/jpg" href="http://example.com/item2/atom-icon-48x48.png" />-->
        <updated>{{ post.date | date: "%Y-%m-%dT%TZ" }}</updated>
        <link href="{{ post.url | absolute_url }}" />
        {% for tag in post.tags %}
          <category term="{{ tag }}" />
        {% endfor %}  
      </entry>
    {% endfor %}
</feed>
