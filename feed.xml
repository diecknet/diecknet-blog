---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="{% if site.active_lang == blank %}{{site.default_lang}}">
     <subtitle>{{ site.description[site.default_lang] | xml_escape }}</subtitle>
    {% else %}{{site.active_lang}}">
     <subtitle>{{ site.description[site.active_lang] | xml_escape}}</subtitle>
    {% endif %}
    <id>{{ 'feed.xml' | absolute_url }}</id>
    <updated>{{"now"| date: "%Y-%m-%dT%TZ"}}</updated>
    <title>{{ site.title | xml_escape }}</title>
    <link href="{{ '/index.html' | absolute_url }}" rel="alternative" type="text/html" />
    {% if site.active_lang == site.default_lang %}
      <link rel="alternative" hreflang="en" href="https://diecknet.de/en/feed.xml" />
    {% else %}
      <link rel="alternative" hreflang="de" href=" https://diecknet.de/feed.xml" />
    {% endif %}
    <link href="{{ 'feed.xml' | absolute_url }}" rel="self" type="application/rss+xml" />
    {% for post in site.posts limit:20 %}
      <entry>
        <title>{{ post.title | xml_escape }}</title>
        <id>{{ post.url | absolute_url }}</id>
        <author><name>{% if post.author %}{{ post.author }}{% else %}{{ site.author.name }}{% endif %}</name></author>
        <summary type"html">
          {% if post.subtitle %}{{ post.subtitle | xml_escape }} - {% endif %}
          {{ post.content | strip_html | xml_escape | truncatewords: 50 }}
        </summary>
        <updated>{{ post.date | date: "%Y-%m-%dT%TZ" }}</updated>
        <link href="{{ post.url | absolute_url }}" />
      </entry>
    {% endfor %}
</feed>