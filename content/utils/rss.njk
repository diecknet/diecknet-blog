---
eleventyExcludeFromCollections: true
permalink: /feed.xml
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ siteconfig.title }}</title>
  <subtitle>{{ siteconfig.description }}</subtitle>
  <link href="{{ '/feed.xml' | absoluteUrl }}" rel="self" type="application/rss+xml"/>
  <link href="{{ siteconfig.url }}"/>
  <updated>{{ collections.posts | rssLastUpdatedDate }}</updated>
  <id>{{ '/feed.xml' | absoluteUrl }}</id>
  {%- for post in collections.posts.slice(-10) | reverse %}
  {% set absolutePostUrl %}{{ post.url | url | absoluteUrl(metadata.url) }}{% endset %}
  <entry>
    <title>{{ post.data.title }}</title>
    <link href="{{ absolutePostUrl }}"/>
    <author>
      <name>{{ siteconfig.author }}</name>
    </author>
    <updated>{{ post.date | rssDate }}</updated>
    <id>{{ absolutePostUrl }}</id>
    <content type="html">{{ post.templateContent | striptags | htmlToAbsoluteUrls(absolutePostUrl) | truncate(400) }}</content>
  </entry>
  {%- endfor %}
</feed>
