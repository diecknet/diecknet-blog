{
    "baseURL": "https://diecknet.de/",
    "languageCode": "de",
    "defaultContentLanguage": "de",
    "defaultContentLanguageInSubdir": true,
    "languages": {
      "de": {
        "contentDir": "content/de",
        "languageName": "Deutsch",
        "weight": 10
      },
      "en": {
        "contentDir": "content/en",
        "languageName": "English",
        "weight": 20
      }
    },
    "permalinks": {
      "posts": "/:year/:month/:day/:slug/"
    },
    "title": "diecknet",
    "theme": "PaperMod",
    "enableRobotsTXT": true,
    "minify": { "disableXML": true, "minifyOutput": true },
    "params": {
      "env": "production",
      "author": "Andreas Dieckmann",
      "homeInfoParams": {
        "title": "Moin.",
        "content": "Welcome to diecknet"
      },
      "assets": {
        "disableHLJS": true
      },
      "socialIcons": [
        { "name": "youtube", "url": "https://youtube.com/@diecknet" },
        { "name": "linkedin", "url": "https://linkedin.com/in/diecknet" },
        { "name": "mastodon", "url": "https://ieji.de/@diecknet" },
        { "name": "twitter", "url": "https://twitter.com/diecknet" },
        { "name": "github", "url": "https://github.com/diecknet/" }
      ],
      "editPosts": {
        "URL": "https://github.com/diecknet/diecknet-blog/tree/main/content/",
        "text": "Suggest Changes",
        "appendFilePath": true
      },
      "showBreadCrumbs": true,
      "ShowCodeCopyButtons": true,
      "ShowPostNavLinks": true,
      "ShowReadingTime": true,
      "ShowShareButtons": true,
      "ShareButtons": ["linkedin","twitter" ]
    },
    "menu": {
      "main": [
        { "name": "Home", "url": "/", "weight": 1 },
        { "name": "About", "url": "/about/", "weight": 2 },
        { "name": "Tags", "url": "/tags/", "weight": 3 },
        { "name": "Categories", "url": "/categories/", "weight": 4 },
        { "name": "Archive", "url": "/archive/", "weight": 5 }
      ]
    },
    "markup": {
      "highlight": {
        "codeFences": true,
        "guessSyntax": true,
        "lineNos": true,
        "lineNumbersInTable": true,
        "noClasses": true,
        "style": "xcode-dark"
      }
    }
}
