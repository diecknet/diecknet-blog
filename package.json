{
    "name": "diecknet-blog",
    "version": "2.1.0",
    "private": true,
    "scripts": {
        "build": "npm run build:css && npm run build:js && npm run build:eleventy",
        "build:css": "postcss assets/css/site.css -o assets/css/site-build.css && postcss assets/css/prism.css -o assets/css/prism-build.css",
        "build:eleventy": "eleventy",
        "build:js": "rollup -c scripts/rollup.config.js",
        "dev": "concurrently \"npm:dev:*\"",
        "dev:css:prism": "postcss assets/css/prism.css -o assets/css/prism-build.css --watch",
        "dev:css:site": "postcss assets/css/site.css -o assets/css/site-build.css --watch",
        "dev:eleventy": "eleventy --serve",
        "dev:js": "rollup -c scripts/rollup.config.js -w",
        "lint": "npm run lint:markdown && npm run lint:js",
        "lint:markdown": "npx markdownlint-cli2 \"./content/**/*.md\"",
        "lint:js": "eslint '**/*.js'",
        "prettier": "prettier --write \"**/*.{css,html,js,json,md,yaml,yml}\"",
        "prettier:verify": "prettier --list-different \"**/*.{css,html,js,json,md,yaml,yml}\""
    },
    "dependencies": {
        "@11ty/eleventy": "1.0.0-canary.44",
        "@11ty/eleventy-plugin-rss": "1.1.2",
        "@11ty/eleventy-plugin-syntaxhighlight": "3.1.3",
        "@akumzy/eleventy-plugin-syntaxhighlight": "0.0.2",
        "@rollup/plugin-replace": "3.0.0",
        "autoprefixer": "10.4.0",
        "crypto-js": "4.1.1",
        "css-what": "5.1.0",
        "cssnano": "5.0.9",
        "date-fns": "2.25.0",
        "dotenv": "10.0.0",
        "eleventy-plugin-i18n": "0.1.3",
        "eleventy-plugin-toc": "1.1.5",
        "glob-parent": "6.0.2",
        "html-minifier": "4.0.0",
        "jsdom": "18.0.1",
        "markdown-it": "12.2.0",
        "markdown-it-anchor": "8.4.1",
        "normalize-url": "7.0.2",
        "postcss": "8.3.11",
        "postcss-cli": "9.0.1",
        "rollup": "2.59.0",
        "rollup-plugin-postcss": "4.0.1",
        "rollup-plugin-terser": "7.0.2",
        "sharp": "0.29.2",
        "shelljs": "0.8.4",
        "tailwindcss": "2.2.19"
    },
    "devDependencies": {
        "concurrently": "6.3.0",
        "eslint": "8.1.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-inclusive-language": "2.1.1",
        "husky": "7.0.4",
        "lint-staged": "11.2.6",
        "markdownlint": "0.24.0",
        "markdownlint-cli2": "0.3.2",
        "prettier": "2.4.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.{css,html,js,json,md,yaml,yml}": [
            "prettier --write"
        ],
        "**/*.js": [
            "eslint"
        ],
        "content/**/*.md": [
            "npx markdownlint-cli2"
        ]
    },
    "volta": {
        "node": "14.18.1",
        "yarn": "1.22.17"
    },
    "resolutions": {
        "ansi-regex": "^5.0.1"
    }
}
