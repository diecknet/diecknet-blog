{
    "name": "diecknet-blog",
    "version": "2.2.0",
    "private": true,
    "scripts": {
        "build": "npm run build:css && npm run build:js && npm run build:eleventy",
        "build:css": "postcss assets/css/site.css -o assets/css/site-build.css && postcss assets/css/prism.css -o assets/css/prism-build.css",
        "build:eleventy": "eleventy",
        "build:js": "rollup -c scripts/rollup.config.js",
        "dev": "concurrently \"npm:dev:*\"",
        "dev:css:prism": "postcss assets/css/prism.css -o assets/css/prism-build.css --watch",
        "dev:css:site": "postcss assets/css/site.css -o assets/css/site-build.css --watch",
        "dev:eleventy": "eleventy --serve",
        "dev:js": "rollup -c scripts/rollup.config.js -w",
        "lint": "npm run lint:markdown && npm run lint:js",
        "lint:markdown": "npx markdownlint-cli2 \"./content/**/*.md\"",
        "lint:js": "eslint '**/*.js'",
        "prettier": "prettier --write \"**/*.{css,html,js,json,md,yaml,yml}\"",
        "prettier:verify": "prettier --list-different \"**/*.{css,html,js,json,md,yaml,yml}\""
    },
    "dependencies": {
        "@11ty/eleventy": "^2.0.0",
        "@11ty/eleventy-plugin-rss": "1.2.0",
        "@11ty/eleventy-plugin-syntaxhighlight": "4.2.0",
        "@akumzy/eleventy-plugin-syntaxhighlight": "0.0.2",
        "@rollup/plugin-replace": "5.0.2",
        "@types/markdown-it": "^12.2.3",
        "autoprefixer": "10.4.13",
        "crypto-js": "4.1.1",
        "css-what": "6.1.0",
        "cssnano": "5.1.14",
        "date-fns": "2.29.3",
        "dotenv": "^16.0.3",
        "eleventy-plugin-i18n": "0.1.3",
        "eleventy-plugin-toc": "1.1.5",
        "glob-parent": "6.0.2",
        "html-minifier": "4.0.0",
        "jsdom": "21.1.0",
        "markdown-it": "13.0.1",
        "markdown-it-anchor": "8.6.6",
        "normalize-url": "8.0.0",
        "postcss": "8.4.21",
        "postcss-cli": "10.1.0",
        "rollup": "2.79.1",
        "rollup-plugin-postcss": "4.0.2",
        "rollup-plugin-terser": "7.0.2",
        "sharp": "0.31.3",
        "shelljs": "0.8.5",
        "tailwindcss": "2.2.19"
    },
    "devDependencies": {
        "concurrently": "7.6.0",
        "eslint": "8.33.0",
        "eslint-config-prettier": "8.6.0",
        "eslint-plugin-inclusive-language": "2.2.0",
        "husky": "8.0.3",
        "lint-staged": "13.1.1",
        "markdownlint": "0.27.0",
        "markdownlint-cli2": "0.6.0",
        "prettier": "2.8.4"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.{css,html,js,json,md,yaml,yml}": [
            "prettier --write"
        ],
        "**/*.js": [
            "eslint"
        ],
        "content/**/*.md": [
            "npx markdownlint-cli2"
        ]
    },
    "volta": {
        "node": "16.19.0",
        "yarn": "1.22.19"
    },
    "resolutions": {
        "ansi-regex": "^5.0.1"
    }
}
